{
  "name": "ms-sqlcmd",
  "version": "2.1.0",
  "description": "Wrapper library for sqlcmd locally or inside a docker instance.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tracker1/node-ms-sqlcmd.git"
  },
  "keywords": [
    "sqlcmd",
    "sql",
    "server",
    "sql",
    "mssql"
  ],
  "author": "Michael J. Ryan <tracker1@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tracker1/node-ms-sqlcmd/issues"
  },
  "homepage": "https://github.com/tracker1/node-ms-sqlcmd#readme",
  "dependencies": {
    "@tracker1/docker-cli": "^1.0.4",
    "glob": "^7.1.7",
    "isexe": "^2.0.0",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/plugin-transform-modules-commonjs": "^7.14.5",
    "@types/jest": "^26.0.24",
    "babel-jest": "^27.0.6",
    "babel-plugin-add-module-exports": "^1.0.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "esm": "^3.2.25",
    "jest": "^27.0.6",
    "jest-esm-transformer": "^1.0.0",
    "mssql": "^6.3.2",
    "prettier": "^2.3.2",
    "shelljs": "^0.8.4"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "parser": "babel",
    "jsxBracketSameLine": true
  },
  "eslintConfig": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "env": {
      "es2020": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "prettier/prettier": "error",
      "no-new-func": "off"
    }
  },
  "eslintIgnore": [
    "node_modules/*",
    "coverage/*",
    "dist/*",
    "scripts/*"
  ],
  "jest": {
    "verbose": true,
    "transform": {
      "\\.m?jsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/*.js",
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/scripts/"
    ]
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-modules-commonjs",
        {
          "allowTopLevelThis": true
        }
      ],
      "babel-plugin-add-module-exports"
    ]
  },
  "scripts": {
    "build": "babel src --out-dir dist",
    "postbuild": "node -r esm scripts/postbuild.js",
    "pretest": "eslint \"./**/*.js\"",
    "test": "jest --coverage --runInBand --no-cache",
    "test-integration": "jest --config=./scripts/integration-tests/jest.config.json ./scripts/integration-tests/",
    "lint": "eslint --fix \"./**/*.js\"",
    "publish-major": "npm version major && git push origin master && git push --tags",
    "publish-minor": "npm version minor && git push origin master && git push --tags",
    "publish-patch": "npm version patch && git push origin master && git push --tags"
  }
}
